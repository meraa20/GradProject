@{
    ViewData["Title"] = "Artist";
    Layout = "_many";
}
<link rel="stylesheet" href="~/css/art.css">

<link rel="stylesheet" href="~/css/About.css">

<div id="content">
<section class="artist-profile">
    <div class="profile-header">
   <a asp-controller="Artists" asp-action="Artist"><img src="~/images/438240362_453793743988413_2561990229713755555_n.jpg" alt="Artist Profile" class="profile-img"></a>
           
        <div class="artist-info">
            <h2>Artist Name</h2>
            <p class="genre">Genre: Contemporary Art</p>
            <p class="followers">Followers: <span>1,234</span></p>
            <button class="follow-btn">Follow</button>
        </div>
    </div>

    <div class="bio">
        <h3>About the Artist</h3>
        <p>This artist is known for their unique approach to modern art, blending various styles and techniques in thought-provoking ways. Their works have been featured in several galleries and exhibitions.</p>
    </div>

    <div class="rating">
        <h3>Product Rating</h3>
        <p>Rating: <span>★★★★☆</span></p>
    </div>

    <section class="artist-works">
        <h3>Works</h3>
        <div class="works-container">
            <div class="work-item">
                <img src="~/images/7.jfif" alt="Artwork 1">
                <p>Artwork Title 1</p>
            </div>
            <div class="work-item">
                <img src="~/images/8.jfif" alt="Artwork 2">
                <p>Artwork Title 2</p>
            </div>
            <div class="work-item">
                <img src="~/images/9.jfif" alt="Artwork 3">
                <p>Artwork Title 3</p>
            </div>
            <div class="work-item">
                <img src="~/images/3.jfif" alt="Artwork 4">
                <p>Artwork Title 4</p>
            </div>
            <!-- Add more works as needed -->
        </div>
    </section>
</section>
</div>
