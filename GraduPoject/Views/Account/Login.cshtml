@{
    ViewData["Title"] = "Login";
    Layout = "_login";
}

<section class="login-section">
    <div class="login-container">
        <div class="form-container">
            <h2>Login to Your Account</h2>

            <form asp-controller="Home" asp-action="Index" method="POST">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>

                <button type="submit" class="submit-btn" id="login-btn">Login</button>
                <p class="forgot-password"><a asp-controller="Account" asp-action="ForgetPass">Forgot Password?</a></p>
                <p class="signup-link">Don't have an account? <a asp-action="sign_up" asp-controller="Account">Sign Up</a></p>
            </form>
        </div>
        <div class="image-container">
            <img src="~/images/login.jpg" alt="Antique Image">
        </div>
    </div>
</section>


<partial name="_ValidationScriptsPartial" />
