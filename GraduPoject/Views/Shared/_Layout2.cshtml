<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
  
    
    <link rel="stylesheet" href="~/css/Home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Subrayada&family=Varela+Round&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - Elite</title>
    <!-- FontAwesome for the search icon -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <img src="~/images/logo3.png" alt="Elite Logo" class="logo">
        <div class="header-right">
            <!-- Search Form -->
            <form action="#" method="post">
                <input type="text" name="search" placeholder="Search...">
                <i class="fas fa-search search-icon"></i>
            </form>
            <!-- Login Button -->
              <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="login-btn" id="log">Log out</button>
        </form>
            
            <a  asp-controller="Notification" asp-action="notification"><img src="~/images/جر2.png" alt="Notification Icon" class="notification-icon"></a>
        </div>
    </header>

    <nav>
        <ul>
            <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Index2">Home</a></li>
            <li><a class="nav-link text-dark" asp-controller="Shop" asp-action="Index">Shop</a></li>
            <li><a class="nav-link text-dark" asp-controller="Artists" asp-action="ArtistFollow">Artists</a></li>
            <li><a class="nav-link text-dark" asp-controller="ContactUs" asp-action="Index">Contact Us</a></li>
            <li><a class="nav-link text-dark" asp-controller="AboutUs" asp-action="Index">About Us</a></li>
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2024 Elite. All rights reserved.</p>
    </footer>
   
</body>
</html>
