<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Subrayada&family=Varela+Round&display=swap" rel="stylesheet">
    <title>@ViewData["Title"] - Elite</title>
    @RenderSection("styles", required: false)
</head>

<body>
    <header>
        <img src="~/images/logo3.png" alt="Elite Logo" class="logo">
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                <li><a asp-controller="Artists" asp-action="ArtistFollow">Artists</a></li>
                <li><a asp-controller="ContactUs" asp-action="Index">Contact Us</a></li>
                <li><a asp-controller="AboutUs" asp-action="Index">About Us</a></li>
                <a asp-controller="Notification" asp-action="notification"><img src="~/images/جر2.png" alt="Notification Icon" class="notification-icon"></a>
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2024 Elite. All rights reserved.</p>
    </footer>

   

    @RenderSection("scripts", required: false)
</body>
</html>
