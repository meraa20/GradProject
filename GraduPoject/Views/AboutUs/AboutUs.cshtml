@{
    ViewData["Title"] = "About Us";
    Layout = "_many";
}

@section styles {
    <link rel="stylesheet" href="~/css/About.css">
}

<section class="about-hero">
    <h1>About Us</h1>
</section>

<section class="about-content">
    <div class="about-text">
        <h2>Our Story</h2>
        <p>At Elite, we are passionate about providing unique and high-quality art and decor for your home. From handpicked artworks to tailored design advice, we strive to create an inspiring experience for our customers. Founded with the belief that every space deserves a touch of creativity, our mission is to help you discover pieces that truly resonate with your style and vision.</p>
    </div>
    <div class="about-image">
        <img src="~/images/Home0.jpg" alt="About Us Image">
    </div>
</section>

<section class="team-section">
    <h2>Meet the Team</h2>
    <div class="team-container">
        <div class="team-member">
            <img src="~/images/9.jfif" alt="Team Member 1">
            <h3>John Doe</h3>
            <p>Founder & CEO</p>
        </div>
        <div class="team-member">
            <img src="~/images/9.jfif" alt="Team Member 2">
            <h3>Jane Smith</h3>
            <p>Creative Director</p>
        </div>
        <div class="team-member">
            <img src="~/images/9.jfif" alt="Team Member 3">
            <h3>Sam Johnson</h3>
            <p>Marketing Manager</p>
        </div>
    </div>
</section>

