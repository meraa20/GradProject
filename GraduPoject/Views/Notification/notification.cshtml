@{
    ViewData["Title"] = "Notifications";
    Layout = "_many";
}
<link rel="stylesheet" href="~/css/shop.css">
<link rel="stylesheet" href="~/css/notify.css">
<section class="notifications-section">
    <h1>Notifications</h1>
    <div class="notifications-container">
        <!-- Notification Item -->
        <div class="notification-item">
            <div class="notification-header">
                <h2>New Product Alert</h2>
                <span class="notification-date">August 25, 2024</span>
            </div>
            <p class="notification-content">We have added new products to our shop! Check out the latest additions to find your next favorite piece of art.</p>
            <button class="delete-btn">Delete</button>
        </div>

        <!-- Another Notification Item -->
        <div class="notification-item">
            <div class="notification-header">
                <h2>Exclusive Offer</h2>
                <span class="notification-date">August 20, 2024</span>
            </div>
            <p class="notification-content">Enjoy a special discount on selected items. Don’t miss out on this limited-time offer!</p>
            <button class="delete-btn">Delete</button>
        </div>

        <!-- More Notification Items as needed -->
    </div>
</section>
