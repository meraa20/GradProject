@model IEnumerable<GraduPoject.Models.Notifications>

@{
    ViewData["Title"] = "Notifications";
    Layout = "_many";
}
<link rel="stylesheet" href="~/css/shop.css">
<link rel="stylesheet" href="~/css/notify.css">
<section class="notifications-section">
    <h1>Notifications</h1>
    <div class="notifications-container">
        @foreach (var notification in Model)
        {
            <div class="notification-item">
                <div class="notification-header">
                    <h2>@notification.Notification</h2>
                    <span class="notification-date">@notification.DateTime.ToString("MMMM dd, yyyy")</span>
                </div>
                <p class="notification-content">@notification.Notification</p>

                <!-- Delete Button with Form -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@notification.ID" />
                    <button class="delete-btn" type="submit">Delete</button>
                </form>
            </div>
        }
       
        <!-- More Notification Items as needed -->
    </div>
</section>
